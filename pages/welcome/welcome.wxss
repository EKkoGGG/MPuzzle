.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-bottom {
  margin-top: 150rpx;
  width: 200rpx;
  height: 200rpx;
  background: #f3f7ff;
  border-radius: 150rpx;
  box-shadow:0 6rpx 10rpx 2rpx #a6a9af;/*for Android*/
  -webkit-box-shadow:0px 3px 5px 1px #a6a9af;/*for IOS*/
}

.logo {
  margin-top: 15rpx;
  margin-left: 10rpx;
  width: 180rpx;
  height: 180rpx;
}

.product-name{
  margin-top: 30rpx;
  font-size: 70rpx;
  color: #173498;
  font-weight: bolder;
  font-family: Arial;
}

.product-slogan{
  margin-top: 5rpx;
  color: #8e9eb5;
  letter-spacing: 5rpx;
}

.welcome-button-stroy {
  margin-top: 100rpx;
  width: 80%;
  height: 100rpx;
  border-radius: 98rpx; 
  text-align: center;
  font-size: 45rpx;
  line-height: 100rpx;
}

.welcome-button-stroy-hover{
  position: relative;
  top: 5rpx;
  margin-top: 100rpx;
  width: 80%;
  height: 100rpx;
  border-radius: 98rpx; 
  text-align: center;
  font-size: 45rpx;
  /* color: #b6bfc6; */
  background-color: #b6bfc6;
  line-height: 100rpx;
  
}

.company{
  margin-top: 300rpx;
  font-size: 25rpx;
  color: #b6bfc6;
}

.company-IPX{
  margin-top: 500rpx;
  font-size: 25rpx;
  color: #b6bfc6;
}